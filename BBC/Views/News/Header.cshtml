@using BBC.Extensions
@using BBC.Factories
@using BBC.Models
@using Glass.Mapper.Sc
@model ICategories
@{
    var rootNode = (Sitecore.Data.Items.Item) ViewBag.RootNode;
}
<div style="margin-top: 10px;">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <b> <a class="navbar-brand" style="color: red;" href="@Sitecore.Links.LinkManager.GetItemUrl(rootNode)">BBC News</a></b>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul id="menu" class="nav navbar-nav">
                    @{
                        foreach (var item in Model.Children.OrderBy(x => x.CategoryName, StringComparer.CurrentCultureIgnoreCase))

                        {
                            <li id="@item.CategoryName"> <a href="@item.TemplateUrl">@item.CategoryName</a></li>
                        }
                    }

                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
</div>
@Html.Script(
    @<script src="@Url.Content("~/Scripts/Header.js")" type="text/javascript"></script>
    )
